<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="top.byzeyou.mapper.UserMapper">

    <select id="selectAll" resultType="top.byzeyou.bean.User">
        select *
        from user;
    </select>

    <insert id="addUser">
        insert into user(username, password, email, phone)
        values (#{username}, md5(#{password}), md5(#{email}), md5(#{phone}));
    </insert>

</mapper>
